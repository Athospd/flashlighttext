PKG_CPPFLAGS = -Iflashlighttext/include
PKG_LIBS = flashlighttext/lib/libflashlight-text.a

all: flashlight $(SHLIB)
$(SHLIB): flashlight

flashlight:
	@echo "Building"
	mkdir build || true
	(cd build; \
        CC="$(CC)" CFLAGS="$(CFLAGS)" \
        CPPFLAGS="$(CPPFLAGS)" LDFLAGS="$(LDFLAGS)" \
        cmake .. \
        -DCMAKE_BUILD_TYPE=Release; \
        cmake --build . --config Release)

