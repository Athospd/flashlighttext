PKG_CPPFLAGS = -Iflashlighttext/include -Iflashlighttext/include/kenlm
PKG_LIBS = flashlighttext/lib/libflashlight-text.a flashlighttext/lib/libflashlight-text-kenlm.a

all: flashlight $(SHLIB)
$(SHLIB): flashlight

flashlight:
	@echo "Building"
	mkdir build || true
	(cd build; \
        CC="$(CC)" CFLAGS="$(CFLAGS)" \
        CPPFLAGS="$(CPPFLAGS)" LDFLAGS="$(LDFLAGS)" \
        cmake .. \
        -DCMAKE_BUILD_TYPE=Release; \
        cmake --build . --config Release)

